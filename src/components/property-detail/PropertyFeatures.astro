---
// Lista de características y extras de la propiedad
export interface Props {
  features?: string[];
}

const { features = [] } = Astro.props;

const defaultFeatures = [
  'Cocina equipada',
  'Aire acondicionado',
  'Calefacción',
  'Ascensor',
  'Garaje',
  'Terraza',
  'Amueblado',
  'Trastero'
];

const displayFeatures = features.length > 0 ? features : defaultFeatures;
---

<section class="property-features">
  <div class="container">
    <h3 class="section-title">Características y extras</h3>
    <div class="features-grid">
      {displayFeatures.map((feature) => (
        <div class="feature-item">
          <svg class="check-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span class="feature-text">{feature}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .property-features {
    padding: 2rem 0;
    background: white;
    border-top: 1px solid #e5e7eb;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #39505d;
    margin: 0 0 1.5rem 0;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
    max-width: 800px;
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .check-icon {
    width: 20px;
    height: 20px;
    color: #133b34;
    flex-shrink: 0;
  }

  .feature-text {
    font-size: 0.9375rem;
    color: #39505d;
  }

  @media (max-width: 640px) {
    .features-grid {
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    }
  }
</style>
