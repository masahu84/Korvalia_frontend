<style>
  /* SECTION: fondo superior celeste + parte inferior blanca */
  .why-korvalia {
    position: relative;
    z-index: 0;
    padding: 4rem 0 5rem;
    background: #ffffff;
  }

  .why-korvalia::before {
    content: "";
    position: absolute;
    inset: 0;
    top: 0;
    height: 200px;
    background: #dbeaf5;
    z-index: -1;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .section-title {
    font-family: "Montserrat", system-ui, sans-serif;
    font-size: 2.25rem;
    font-weight: 600;
    color: #39505d;
    text-align: center;
    margin: 0 0 0.5rem 0;
  }

  .section-subtitle {
    font-size: 1rem;
    color: #6a8074;
    text-align: center;
    margin: 0 0 2.5rem 0;
  }

  /* Layout FLEX para poder alinear verticalmente */
  .why-content {
    display: flex;
    align-items: center; /* card centrada respecto a la imagen */
    justify-content: center;
    gap: 0; /* sin hueco entre card e imagen */
    margin-top: 8.5rem;
  }

  @media (max-width: 968px) {
    .why-content {
      flex-direction: column;
      align-items: stretch;
      gap: 3rem;
      margin-top: 2.5rem;
    }

    .image-column {
      order: -1;
    }
  }

  .benefits-column {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    margin-right: -1.25rem; /* empuja la card hacia la imagen */
  }

  .benefit-card {
    background: #c8dce8;
    padding: 2.5rem 2.25rem;
    border-radius: 16px;
    min-height: 330px;
    max-width: 430px;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }

  .benefit-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #39505d;
    margin: 0 0 0.75rem 0;
  }

  .benefit-text {
    font-size: 0.98rem;
    color: #39505d;
    font-weight: 500;
    margin: 0 0 0.75rem 0;
  }

  .benefit-description {
    font-size: 0.9375rem;
    line-height: 1.7;
    color: #6a8074;
    margin: 0 0 1rem 0;
  }

  .benefit-button {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.65rem 1.5rem;
    background: #39505d;
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 500;
    font-size: 0.9375rem;
    transition: background 0.2s;
    margin-top: 1rem;
    align-self: flex-start;
    cursor: pointer;
  }

  .benefit-button:hover {
    background: #2d3f4a;
  }

  .button-text {
    flex: 1;
  }

  .button-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: #f4d03f;
    color: #39505d;
    border-radius: 50%;
    font-weight: 700;
    font-size: 0.875rem;
    flex-shrink: 0;
  }

  .image-column {
    display: flex;
    justify-content: flex-start;
  }

  .image-wrapper {
    position: relative;
    height: 520px; /* imagen alargada */
    max-width: 540px;
    width: 100%;
  }

  @media (max-width: 1200px) {
    .image-wrapper {
      height: 480px;
    }
  }

  .image-inner {
    border-radius: 18px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.12);
    width: 100%;
    height: 100%;
  }

  .main-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* üîº Etiquetas flotantes m√°s anchas */
  .floating-card {
    position: absolute;
    background: white;
    padding: 0.9rem 1.6rem;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    max-width: 280px;
    width: 260px; /* m√°s width */
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  /* üîÅ Arriba a la IZQUIERDA, sobresaliendo */
  .floating-card-1 {
    top: 12%;
    left: -8%;
    right: auto;
  }

  /* üîÅ Abajo a la DERECHA, sobresaliendo */
  .floating-card-2 {
    bottom: 10%;
    right: -8%;
    left: auto;
  }

  @media (max-width: 968px) {
    .benefits-column {
      align-items: center;
      margin-right: 0;
    }

    .image-column {
      justify-content: center;
    }

    .image-wrapper {
      height: 380px;
      max-width: 100%;
    }

    /* en m√≥vil las metemos un poco m√°s hacia dentro para que no se corten demasiado */
    .floating-card-1 {
      top: 6%;
      left: 6%;
      right: auto;
    }

    .floating-card-2 {
      bottom: 8%;
      right: 6%;
      left: auto;
    }
  }

  .floating-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: #39505d;
    border-radius: 50%;
    font-size: 1.25rem;
    color: #ffffff;
    flex-shrink: 0;
  }

  .floating-card-text {
    font-size: 0.875rem;
    font-weight: 500;
    color: #39505d;
    margin: 0;
    line-height: 1.4;
  }
</style>

<script>
  // Agregar funcionalidad al bot√≥n de contacto
  document.addEventListener("DOMContentLoaded", () => {
    const contactBtn = document.querySelector(".benefit-button");
    if (contactBtn) {
      contactBtn.addEventListener("click", () => {
        window.location.href = "/contacto";
      });
    }
  });
</script>
