---
// Footer Korvalia - Dinámico con datos de la empresa
const API_BASE = import.meta.env.PUBLIC_API_URL || "http://localhost:4000";

// Cargar datos de la empresa
let companyName = "Korvalia Inmobiliaria";
let logoUrl = "/logo-footer.png";
let instagramUrl = "";
let facebookUrl = "";
let linkedinUrl = "";
let whatsappNumber = "";

try {
  const response = await fetch(`${API_BASE}/api/settings`);
  if (response.ok) {
    const result = await response.json();
    const data = result.data || {};

    if (data.companyName) {
      companyName = data.companyName;
    }

    if (data.logoUrl) {
      // Construir URL completa del logo
      if (data.logoUrl.startsWith("http://") || data.logoUrl.startsWith("https://")) {
        logoUrl = data.logoUrl;
      } else {
        logoUrl = data.logoUrl.startsWith("/") ? `${API_BASE}${data.logoUrl}` : `${API_BASE}/${data.logoUrl}`;
      }
    }

    // Redes sociales
    instagramUrl = data.instagramUrl || "";
    facebookUrl = data.facebookUrl || "";
    linkedinUrl = data.linkedinUrl || "";
    whatsappNumber = data.whatsappNumber || "";
  }
} catch (error) {
  console.error("Error al cargar datos de la empresa:", error);
}

// Construir URL de WhatsApp (formato wa.me)
const whatsappUrl = whatsappNumber ? `https://wa.me/${whatsappNumber.replace(/[^0-9]/g, "")}` : "";

// Verificar qué redes sociales están disponibles
const hasSocialMedia = instagramUrl || facebookUrl || linkedinUrl || whatsappUrl;
---

<footer class="korvalia-footer">
  <div class="footer-container">
    <!-- Parte superior -->
    <div class="footer-top">
      <!-- Logo -->
      <div class="footer-logo">
        <a href="/">
          <img src={logoUrl} alt={companyName} class="footer-logo-img" />
        </a>
      </div>

      <!-- Enlaces -->
      <div class="footer-links">
        <div class="footer-column">
          <a href="/propiedades" class="footer-link footer-link-main"> Propiedades </a>
          <a href="/contacto" class="footer-link">Contacto</a>
          <a href="/sobre-nosotros" class="footer-link">Perfil</a>
        </div>

        <div class="footer-column">
          <h3 class="footer-column-title">Legal</h3>
          <a href="/aviso-legal" class="footer-link">Aviso Legal</a>
          <a href="/politica-privacidad" class="footer-link">Política de Privacidad</a>
          <a href="/politica-cookies" class="footer-link">Política de Cookies</a>
        </div>
      </div>
    </div>

    <!-- Separador -->
    <hr class="footer-divider" />

    <!-- Parte inferior -->
    <div class="footer-bottom">
      <p class="footer-copy">
        ©{new Date().getFullYear()}
        {companyName}. Todos los derechos reservados
      </p>

      {
        hasSocialMedia && (
          <div class="footer-social">
            {instagramUrl && (
              <a
                href={instagramUrl}
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Instagram"
                class="footer-social-link"
              >
                <svg viewBox="0 0 24 24" class="footer-social-icon" fill="currentColor" aria-hidden="true">
                  <path d="M7 2C4.24 2 2 4.24 2 7v10c0 2.76 2.24 5 5 5h10c2.76 0 5-2.24 5-5V7c0-2.76-2.24-5-5-5H7zm10 2c1.66 0 3 1.34 3 3v10c0 1.66-1.34 3-3 3H7c-1.66 0-3-1.34-3-3V7c0-1.66 1.34-3 3-3h10zm-5 3a5 5 0 100 10 5 5 0 000-10zm0 2a3 3 0 110 6 3 3 0 010-6zm4.75-2.75a1.25 1.25 0 11-2.5 0 1.25 1.25 0 012.5 0z" />
                </svg>
              </a>
            )}

            {facebookUrl && (
              <a
                href={facebookUrl}
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Facebook"
                class="footer-social-link"
              >
                <svg viewBox="0 0 24 24" class="footer-social-icon" fill="currentColor" aria-hidden="true">
                  <path d="M22 12.07C22 6.51 17.52 2 12 2S2 6.51 2 12.07C2 17.1 5.66 21.22 10.44 22v-6.99H8.08v-2.94h2.36V9.84c0-2.33 1.38-3.62 3.5-3.62.99 0 2.04.18 2.04.18v2.26h-1.15c-1.14 0-1.49.71-1.49 1.44v1.73h2.54l-.41 2.94h-2.13V22C18.34 21.22 22 17.1 22 12.07Z" />
                </svg>
              </a>
            )}

            {linkedinUrl && (
              <a
                href={linkedinUrl}
                target="_blank"
                rel="noopener noreferrer"
                aria-label="LinkedIn"
                class="footer-social-link"
              >
                <svg viewBox="0 0 24 24" class="footer-social-icon" fill="currentColor" aria-hidden="true">
                  <path d="M6.5 6.5a2 2 0 11-4 0 2 2 0 014 0zM4.5 8.75H2V22h2.5V8.75zM9.25 8.75H6.83V22h2.42v-6.97c0-1.84.88-2.93 2.4-2.93 1.46 0 2.16 1.03 2.16 2.93V22h2.42v-7.88c0-2.9-1.54-4.43-3.86-4.43-1.78 0-2.7.98-3.15 1.67h-.05l-.12-1.42z" />
                </svg>
              </a>
            )}

            {whatsappUrl && (
              <a
                href={whatsappUrl}
                target="_blank"
                rel="noopener noreferrer"
                aria-label="WhatsApp"
                class="footer-social-link"
              >
                <svg viewBox="0 0 24 24" class="footer-social-icon" fill="currentColor" aria-hidden="true">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z" />
                </svg>
              </a>
            )}
          </div>
        )
      }
    </div>
  </div>
</footer>

<style>
  .korvalia-footer {
    background: #f9fafb;
    color: #111827;
    border-top: 1px solid #e5e7eb;
  }

  .footer-container {
    max-width: 1500px;
    margin: 0 auto;
    padding: 2.5rem 1.5rem 2rem;
    width: 100%;
  }

  .footer-top {
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    justify-content: space-between;
    gap: 3rem;
  }

  .footer-logo-img {
    max-width: 220px;
    height: auto;
    display: block;
  }

  .footer-links {
    display: flex;
    flex-wrap: wrap;
    gap: 3.5rem;
  }

  .footer-column {
    min-width: 140px;
  }

  .footer-link,
  .footer-column-title {
    font-size: 0.95rem;
    line-height: 1.7;
    text-decoration: none;
  }

  .footer-link-main {
    font-weight: 600;
    color: #111827;
    display: inline-block;
    margin-bottom: 0.4rem;
  }

  .footer-column-title {
    font-weight: 600;
    color: #111827;
    margin-bottom: 0.4rem;
  }

  .footer-link {
    display: block;
    color: #6b7280;
    margin-bottom: 0.25rem;
    transition: color 0.15s ease;
  }

  .footer-link:hover {
    color: #111827;
  }

  .footer-divider {
    border: none;
    border-top: 1px solid #e5e7eb;
    margin: 2.25rem 0 1.5rem;
  }

  .footer-bottom {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .footer-copy {
    font-size: 0.85rem;
    color: #9ca3af;
  }

  .footer-social {
    display: flex;
    gap: 1rem;
  }

  .footer-social-link {
    color: #9ca3af;
    transition: color 0.15s ease;
  }

  .footer-social-link:hover {
    color: #111827;
  }

  .footer-social-icon {
    width: 20px;
    height: 20px;
    display: block;
  }

  @media (max-width: 768px) {
    .footer-top {
      flex-direction: column;
      align-items: flex-start;
      gap: 2rem;
    }

    .footer-links {
      gap: 2.5rem;
    }

    .footer-bottom {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
