---
/**
 * Dashboard Principal del Panel Admin
 * Muestra estadísticas y accesos rápidos
 */
export const prerender = false;

import AdminLayout from "../../admin/layouts/AdminLayout.astro";
import AdminSidebar from "../../admin/components/AdminSidebar.tsx";
import AdminTopbar from "../../admin/components/AdminTopbar.tsx";
import Dashboard from "../../admin/components/Dashboard.tsx";
---

<AdminLayout title="Dashboard - Panel Admin">
  <AdminSidebar client:load currentPath="/admin/dashboard" />

  <div class="admin-main">
    <AdminTopbar client:load />

    <div class="admin-content">
      <div class="admin-container">
        <Dashboard client:load />
      </div>
    </div>
  </div>
</AdminLayout>

<script>
  const token = localStorage.getItem("admin_token");
  if (!token) window.location.href = "/admin/login";
</script>
