---
/**
 * Listado de Propiedades
 * Usa el componente React PropertyTable.tsx refactorizado
 */
export const prerender = false;

import AdminLayout from "../../../admin/layouts/AdminLayout.astro";
import AdminSidebar from "../../../admin/components/AdminSidebar.tsx";
import AdminTopbar from "../../../admin/components/AdminTopbar.tsx";
import PropertyTable from "../../../admin/components/PropertyTable";
---

<AdminLayout title="Propiedades - Panel Admin">
  <AdminSidebar client:load currentPath="/admin/properties" />

  <div class="admin-main">
    <AdminTopbar client:load />

    <div class="admin-content">
      <div class="admin-container">
        <PropertyTable client:load />
      </div>
    </div>
  </div>
</AdminLayout>

<script>
  const token = localStorage.getItem("admin_token");
  if (!token) window.location.href = "/admin/login";
</script>
